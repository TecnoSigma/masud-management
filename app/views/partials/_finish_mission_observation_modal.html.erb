<div id="finishMissionObservationModal" class="w3-modal">
  <div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
      <main>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-4">
              <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                  <span id="closeFinishMissionObservationModalBtn" class="w3-button w3-display-topright">&times;</span>
                  <h3 class="text-center font-weight-light my-4"><%= t('.title') %></h3>
                </div>
                <div class="card-body">
                  <%= form_with scope: 'mission', url: employee_panel_operator_dashboard_missao_finish_mission_path(order_number: @mission.escort_service.order_number) do |f| %>
                    <div class="form-floating mb-3">
                      <%= f.text_field :observation,
                                       class: 'form-control',
                                       id: 'inputFinishMissionObservation',
                                       placeholder: t('.final_considerations_placeholder'),
                                       required: true %>
                      <label for="inputFinishMissionObservation"><%= t('.final_considerations') %></label>
                      <small><%= t('messages.infos.finish_mission_observation') %></small>
                      <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <%= f.submit t('.confirm_finish_mission'), class: 'btn btn-danger' %>
                      </div>
                    </div>
                  <% end %>
                </div>
                <div class="card-footer text-center py-3"></div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</div>
