<div id="layoutAuthentication">
  <div id="layoutAuthentication_content">
    <main>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5">
            <br>
            <%= render './partials/messages' %>
            <div class="card shadow-lg border-0 rounded-lg mt-5">
              <div class="card-header">
                <h3 class="text-center font-weight-light my-4"><%= t('.title') %></h3>
              </div>
              <div class="card-body">
                <%= form_with scope: "#{user}_password", url: update_password_path, method: :patch do |f| %>
                  <div class="form-floating mb-3">
                    <%= f.email_field :email,
                                      class: 'form-control',
                                      id: 'currentEmail',
                                      placeholder: t('.current_email_placeholder'),
                                      required: true %>
                    <label for="currentEmail"><%= t('.current_email') %></label>
                  </div>
                  <div class="form-floating mb-3">
                    <%= f.password_field :current_password,
                                         class: 'form-control',
                                         id: 'oldPassword',
                                         placeholder: t('.old_password_placeholder'),
                                         required: true %>
                    <label for="oldPassword"><%= t('.old_password') %></label>
                  </div>
                  <div class="form-floating mb-3">
                    <%= f.password_field :new_password,
                                         class: 'form-control',
                                         id: 'newPassword',
                                         placeholder: t('.new_password_placeholder'),
                                         required: true %>
                    <label for="newPassword"><%= t('.new_password') %></label>
                  </div>
                  <div class="mb-3">
                    <small><%= t('messages.infos.password_strength') %></small>
                  </div>
                  <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <%= f.submit t('.change_password_btn'), class: 'btn btn-primary' %>
                  </div>
                <% end %>
              </div>
              <div class="card-footer text-center py-3"></div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
