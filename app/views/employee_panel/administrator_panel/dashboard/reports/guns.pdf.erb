  <%= render '/partials/header' %>
  <h1 style="text-align: center"><%= t('.title') %></h1>
  <hr>
  <table width="100%">
    <thead>
      <tr>
        <th><%= t('.kind') %></th>
        <th><%= t('.caliber') %></th>
        <th><%= t('.number') %></th>
        <th><%= t('.sinarm') %></th>
        <th><%= t('.situation') %></th>
        <th><%= t('.in_mission') %></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th><%= t('.kind') %></th>
        <th><%= t('.caliber') %></th>
        <th><%= t('.number') %></th>
        <th><%= t('.sinarm') %></th>
        <th><%= t('.situation') %></th>
        <th><%= t('.in_mission') %></th>
      </tr>
    </tfoot>
    <tbody>
      <% @guns.each do |gun| %>
        <tr style="text-align: center">
          <td><%= gun.kind.titleize %></td>
          <td><%= gun.caliber %></td>
          <td><%= gun.number %></td>
          <td><%= gun.sinarm %></td>
          <td><%= gun.situation %></td>
          <td><%= t("#{gun.in_mission?}").downcase %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
