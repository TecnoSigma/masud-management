<h1 class="mt-4"><%= t('.title', license_plate: @vehicle.license_plate) %></h1>
<ol class="breadcrumb mb-4">
  <li class="breadcrumb-item">
    <%= link_to t('breadcrumbs.vehicles_list'), employee_panel_administrator_dashboard_viaturas_path %>
  </li>
  <li class="breadcrumb-item active"><%= t('.title', license_plate: @vehicle.license_plate) %></li>
</ol>
<hr>
<div id="layoutAuthentication">
  <div id="layoutAuthentication_content">
    <main>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-7">
            <br>
            <%= render './partials/messages' %>
            <div class="card shadow-lg border-0 rounded-lg mt-5">
              <div class="card-body">
                <%= form_with scope: 'vehicle', url: employee_panel_administrator_dashboard_vehicle_update_path, method: :patch do |f| %>
                  <p>
                    <small><%= t('.required_fields') %></small>
                  </p>
                  <span><strong><%= t('.vehicle_data') %></strong></span>
                  <br><br>
                  <div class="form-floating mb-3">
                    <%= f.text_field :name,
                                     class: 'form-control',
                                     id: 'inputName',
                                     required: true,
                                     placeholder: t('.name_placeholder') %>
                    <label for="inputName"><%= t('.name') %></label>
                  </div>
                  <div class="form-floating mb-3">
                    <%= f.text_field :license_plate,
                                     class: 'form-control',
                                     id: 'inputLicensePlate',
                                     placeholder: t('.license_plate_placeholder'),
                                     required: true %>
                    <label for="inputLicensePlate"><%= t('.license_plate') %></label>
                    <small><%= t('.format_license_plate_info') %></small>
                  </div>
                  <div class="form-floating mb-3">
                    <%= f.text_field :color,
                                     class: 'form-control',
                                     id: 'inputColor',
                                     required: true,
                                     placeholder: t('.color_placeholder') %>
                    <label for="inputColor"><%= t('.color') %></label>
                  </div>
                  <div class="form-floating mb-3">
                    <%= f.select :status,
                                 options_for_select(
                                   Vehicle.statuses.collect {|status| [ status.name.titleize, status.name ] },
                                   @vehicle.status.name
                                 ),
                                 { class: 'form-control',
                                   prompt: t('.status') },
                                   required:  true %>
                  </div>
                  <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <%= f.submit t('.update_vehicle_btn'), class: 'btn btn-primary' %>
                  </div>
                <% end %>
              </div>
              <div class="card-footer text-center py-3"></div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
